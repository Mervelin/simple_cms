<%= link_to('<< Back to List', sections_path(page_id: @page.id), class: 'back-link') %>

<div class="sections edit">
  <h2>Create section</h2>

  <%= form_for(@section, url: section_path(@section, page_id: @page.id), method: 'patch') do |f| %>

    <%= render(partial: 'form', locals: {f: f}) %>

    <div class="form-buttons">
      <%= f.submit('Update section') %>
    </div>

  <% end %>
</div>
