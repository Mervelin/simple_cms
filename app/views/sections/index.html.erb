<% @page_title = 'All Sections' %>

<%= link_to('<< Back to Menu', admin_path, class: 'back-link') %>

<div class="sections index">
  <h2>Sections</h2>

  <%= link_to('Add New section', new_section_path, class: 'action_new') %>

  <div><%= pluralize(@sections.size, 'section') %> found</div>

  <table class="listing" summary="section list">
    <tr class="header">
      <th>#</th>
      <th>Page ID</td>
      <th>Section</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
    <tr>
      <td><%= section.position %></td>
      <td><%= section.page_id %></td>
      <td><%= section.name %></td>
      <td class="center"> <%= status_tag(section.visible) %></td>
      <td class="actions">
        <%= link_to('Show', section_path(section), class: 'action show') %>
        <%= link_to('Edit', edit_section_path(section), class: 'action edit') %>
        <%= link_to('Delete', delete_section_path(section), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
